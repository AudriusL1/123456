{% extends 'base.html.twig' %}

{% block title %}All events{% endblock %}
{% block titleBar %}{% endblock %}
{% block eventBlockTitleAdmin %}{% endblock %}
{% block body %}

{% if events %}
    <link rel="stylesheet" href="{{ asset('front-end/css/new.css') }}">
    <link rel="stylesheet" href="{{ asset('front-end/css/index.css') }}">
    <div class="eventTitleAlign">
        <p align="center">Hello <mark class="colorUser" >{{ user.username }}</mark> USER! </p>
    </div>
    <div class="eventTitleAlign1">
        <p align="center">Enjoy surfing KTU events</p>
    </div>
    <div class="align">
    <table id="event" class ="table table-hover">
        <thead class="thead-dark">
    <tr>
      <th>Event Title</th>
      <th>Event Category</th>
      <th>Event Date</th>
      <th>Event Price</th>
      <th>Actions</th>
      </tr>
      </thead>
      <tbody>
          {% for event in events %}
          <tr>
          <td>{{ event.name }}</td>
          <td>{{ event.category }}</td>
          <td>{{ event.date|date('Y-m-d') }}</td>
          {% if event.price == 0 %}
          <td>Free!</td>
          {% else %}
            <td>{{ event.price }} â‚¬</td>
          {% endif %}
          <td><a href="/event/{{event.id}}"button>Show</a></td>
          </tr>
          {% endfor %}
      </tbody>
      </table>
    </div>
{% else %}
    <div class="eventTitleAlign">
        <p align="center">Hello <mark class="colorUser" >{{ user.username }}</mark> USER! </p>
    </div>
    <div class="eventTitleAlign1">
        <p align="center">We are sorry, but there are not any upcoming events</p>
    </div>
{% endif %}
{% endblock %}
