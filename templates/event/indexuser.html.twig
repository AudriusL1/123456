{% extends 'base.html.twig' %}

{% block title %}All events{% endblock %}

{% block body %}
<td><a href="/event">Events</a></td>
<td><a href="/event">Events For Me</a></td>
<td><a href="/categories">Categories</a></td>
<td><a href="/profile">Profile</a></td>
<td><a href="{{path('logout')}}">Logout</a></td><br>
{% if events %}
    <table id="event" class ="table table-striped">
    <thead>
    <tr>
      <th>Event Title</th>
      <th>Event Category</th>
      <th>Event Date</th>
      <th>Event Price</th>
      <th>Actions</th>
      </tr>
      </thead>
      <tbody>
          {% for event in events %}
          <tr>
          <td>{{ event.name }}</td>
          <td>{{ event.category }}</td>
          <td>{{ event.date|date('Y-m-d') }}</td>
          {% if event.price == 0 %}
          <td>Free!</td>
          {% else %}
            <td>{{ event.price }} â‚¬</td>
          {% endif %}
          <td><a href="/event/{{event.id}}" button class="btn">Show</a></td>
          </tr>
          {% endfor %}
      </tbody>
      </table>
{% else %}
    <p>No events</p>
{% endif %}
{% endblock %}
