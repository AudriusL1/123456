{% extends 'base.html.twig' %}

{% block title %}KTU events Sign Up{% endblock %}
{% block eventBlockTitleAdmin %}{% endblock %}
{% block eventBlockTitleUser %}{% endblock %}
{% block body %}
        <link rel="stylesheet" href="{{ asset('front-end/css/register.css') }}">
    <p>
        <div class="wrap">
            <h2>Sign up to the academic event system </h2>
                {{ form_start(registrationForm) }}
                <div class="textBox">
                    {{ form_widget(registrationForm.username,{'attr' : {'class' :'labelStyles','placeholder': 'username' } })}}
                </div>

                <div class="textBox">
                    {{ form_widget(registrationForm.email,{'attr' : {'class' :'labelStyles','placeholder': 'email' } })}}
                </div>
                <div class="textBox">
                    {{ form_widget(registrationForm.plainPassword.first,{'attr' : {'class' :'labelStyles','placeholder': 'password' } })}}
                </div>
            <div class="textBox">
                {{ form_widget(registrationForm.plainPassword.second,{'attr' : {'class' :'labelStyles','placeholder': 'repeat password' } })}}
            </div>

                <button class="btn">Register</button>

                <button class="btn"><a href="{{ '/menu' }}">Go back</a></button>
                {{ form_end(registrationForm) }}
        </div>
    </p>
{% endblock %}
