{% extends 'base.html.twig' %}

{% block title %}All users{% endblock %}
{% block titleBar %}{% endblock %}
{% block eventBlockTitleAdmin %}{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('front-end/css/show.css') }}">
    <link rel="stylesheet" href="{{ asset('front-end/css/new.css') }}">
<div class="align">
<h1>{{ users.username }}</h1>
<p>Email: {{ users.email }}</p>
{% if users.role == 1 %}
<p>{{ users.username }} is Admin</p>
{% else %}
<p>{{ users.username }} USER</p>
{% endif %}
<td><a class="btn classNew1" href="/users" >Go Back</a></td>
</div>
{% endblock %}

{% block javascripts %}
<script src="/js/main5.js"></script>
{% endblock %}
