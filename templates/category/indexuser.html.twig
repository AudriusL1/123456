{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
<td><a href="/event">Events</a></td>
<td><a href="/event">Events For Me</a></td>
<td><a href="/categories">Categories</a></td>
<td><a href="/profile">Profile</a></td>
<a href="{{path('logout')}}">Logout</a><br>
{% if categories %}
    <table id="category" class ="table table-striped">
    <thead>
    <tr>
      <th>Category</th>
      <th>Actions</th>
      </tr>
      </thead>
      <tbody>
          {% for category in categories %}
          <tr>
          <td>{{ category.name }}</td>
          <td><a href="/categories" button class="btn">Subscribe</a></td>
          </tr>
          {% endfor %}
      </tbody>
      </table>
{% else %}
    <p>No Categories</p>
{% endif %}
{% endblock %}
